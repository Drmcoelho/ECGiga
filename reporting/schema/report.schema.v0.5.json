    },
    "patient_info": {
      "type": "object"
    },
    "acquisition": {
      "type": "object"
    },
    "segmentation": {
      "type": "object"
    },
    "layout_detection": {
      "type": "object"
    },
    "rpeaks": {
      "type": "object"
    },
    "intervals": {
      "type": "object"
    },
    "intervals_refined": {
      "type": "object"
    },
